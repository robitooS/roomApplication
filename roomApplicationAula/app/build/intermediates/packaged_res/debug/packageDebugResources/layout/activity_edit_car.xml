<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditCar">

    <TextView
        android:id="@+id/textViewEditarCarro"
        android:layout_width="247dp"
        android:layout_height="79dp"
        android:layout_marginTop="76dp"
        android:background="#EBDFDF"
        android:backgroundTint="#E0DADA"
        android:text="Editar carro"
        android:textAlignment="center"
        android:textSize="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editarAno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="244dp"
        android:ems="10"
        android:inputType="number"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.592"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewEditarCarro"
        app:layout_constraintVertical_bias="0.08" />

    <TextView
        android:id="@+id/txtIdCarro"
        android:layout_width="135dp"
        android:layout_height="34dp"
        android:layout_marginTop="148dp"
        android:background="#EBDFDF"
        android:backgroundTint="#E0DADA"
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/editarPlaca"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.469" />

    <EditText
        android:id="@+id/editarPlaca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/editarAno"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.592"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewEditarCarro"
        app:layout_constraintVertical_bias="0.677"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="70dp"
        android:layout_height="31dp"
        android:layout_marginTop="312dp"
        android:text="Placa"
        android:textSize="25dp"
        app:layout_constraintEnd_toStartOf="@+id/editarPlaca"
        app:layout_constraintHorizontal_bias="0.62"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="74dp"
        android:layout_height="31dp"
        android:layout_marginTop="88dp"
        android:text="Ano"
        android:textSize="25dp"
        app:layout_constraintEnd_toStartOf="@+id/editarAno"
        app:layout_constraintHorizontal_bias="0.673"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageButton
        android:id="@+id/btnEdtSalvar"
        android:layout_width="70dp"
        android:layout_height="53dp"
        android:backgroundTint="#4CAF50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toEndOf="@+id/btnEdtCancelar"
        app:layout_constraintTop_toBottomOf="@+id/editarAno"
        app:layout_constraintVertical_bias="0.467"
        app:srcCompat="@drawable/baseline_check_24" />

    <ImageButton
        android:id="@+id/btnEdtCancelar"
        android:layout_width="70dp"
        android:layout_height="53dp"
        android:layout_marginStart="104dp"
        android:backgroundTint="#FF0000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editarAno"
        app:layout_constraintVertical_bias="0.466"
        app:srcCompat="@drawable/baseline_cancel_24" />

</androidx.constraintlayout.widget.ConstraintLayout>